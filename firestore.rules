rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users can create their own profile upon signup.
    // They can only read and update their own profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
    }
    
    // Users can manage their own investments.
    match /users/{userId}/investments/{investmentId} {
    	allow read, list, create, update, delete: if isOwner(userId);
    }

    // Users can read their own referrals.
    match /users/{userId}/referrals/{referralId} {
      allow read, list: if isOwner(userId);
      // Referrals are created during signup, not directly by clients.
      allow create, update, delete: if false;
    }
    
    // Investment machines are public and read-only for all users.
    match /investmentMachines/{machineId} {
    	allow get, list: if true;
      allow create, update, delete: if false; // Managed by admin, not clients
    }
    
    // Tokens can be read by any signed-in user.
    // This allows the redeem page to check for a token's validity.
    // A token can only be "updated" (redeemed) once.
    // Only admins (defined by a separate rule/logic) should create tokens.
    // For now, we allow any signed-in user to create, but hide the UI.
    match /tokens/{tokenId} {
    	allow read, list, create: if isSignedIn();
      // Secure update rule: can only be redeemed once.
      allow update: if isSignedIn()
      							&& resource.data.isRedeemed == false
                    && request.resource.data.isRedeemed == true
                    && request.resource.data.redeemedBy == request.auth.uid;
    }
  }
}
